{{#each blogs}}
<div class="row justify-content-center" data-index="{{id}}" id="blog-card">
    <div class="card col-9 my-3 bg-dark">
        <div class="card-body">
            <div class="row justify-content-between">
                <h3 class="card-title text-light">{{title}}</h3>
                <p class="text-light">Posted by {{User.username}} on {{blog_date}}</p>
            </div>
            <p class="bg-light p-3 m-0 rounded text-body">{{content}}</p>
        </div>
    </div>
</div>
{{/each}}

{{#each comments}}
<div class="row justify-content-center">
    <div class="card col-8 my-3 bg-dark">
        <div class="card-body">
        <div class="row justify-content-end">
            <p class="text-light">Posted by {{User.username}} on {{comment_date}}</p>
        </div>
        <p class="bg-light p-3 m-0 rounded text-body">{{comment}}</p>
        </div>
    </div>
</div>
{{/each}}

<form class="col-8 bg-dark mx-auto rounded py-3 my-3">
    <h3 class="text-light">New Comment:</h3>
    <div class="form-group">
        <textarea type:"text" class="form-control" id="comment" rows="3"></textarea>
    </div>
    <div class="d-flex justify-content-center">
        <button type="submit" class="btn btn-primary bg-secondary border-0 col-3" id="submitBtn">Submit</button>
    </div>
</form>

<script src="/js/blogsbyid.js"></script>