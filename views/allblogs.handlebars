{{#each blogs}}
    <div class="row justify-content-center">
        <div class="card col-9 my-3 bg-dark">
            <div class="card-body">
                <div class="row justify-content-between">
                    <h3 class="card-title text-light">{{title}}</h3>
                    <p class="text-light">Posted by {{User.username}} on {{created_date}}</p>
                </div>
            <p class="card-text bg-light p-3 m-0 rounded">{{content}}</p>
            </div>
        </div>
    </div>
{{/each}}